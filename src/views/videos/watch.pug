extends ../base


block content 
    div 
        video(src="/" + video.videoUrl,controls,width="1000",height="600") 
        p=video.description
        p=video.hashtags
        small=video.creatAt
    div 
        small Updated by #{video.owner.username}
        
    if String(video.owner._id) === String(loggedInUser._id)
        a(href=`${video.id}/edit`) Edit Video &rarr;
        br
        a(href=`${video.id}/delete`) Delete Video &rarr;