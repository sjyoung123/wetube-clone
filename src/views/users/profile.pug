extends ../base
include ../mixins/video

block content
    div.profile__data 
        if loggedInUser.avatarUrl
            if loggedInUser.avatarUrl.includes("github")
                img.header__avatar(src=loggedInUser.avatarUrl crossorigin).avatar
            else
                img.header__avatar(src=loggedInUser.avatarUrl crossorigin).avatar
        h3=user.username
    div.video-grid
        each video in user.videos
            +video(video)
        else
            span.emtpy__message No video found

